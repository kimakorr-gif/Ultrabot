# Ultrabot Configuration Template
# Copy to .env and fill in your credentials

# Application Settings
APP_NAME=Ultrabot
APP_VERSION=1.0.0
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=false
LOG_FORMAT=json

# Telegram Bot
TELEGRAM_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHANNEL_ID=-1001234567890

# Yandex Translate API
YANDEX_API_KEY=your_yandex_api_key
YANDEX_FOLDER_ID=your_yandex_folder_id
TRANSLATE_TARGET_LANG=ru
TRANSLATE_SOURCE_LANG=en

# Database (PostgreSQL)
DATABASE_URL=postgresql://ultrabot:ultrabot_password@localhost:5432/ultrabot
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_PRE_PING=true

# Redis Cache
REDIS_URL=redis://localhost:6379/0
REDIS_TTL_TRANSLATION=3600
REDIS_TTL_FEED_RESPONSE=300
REDIS_TTL_MEDIA_METADATA=86400

# RSS Feed Processing
RSS_CHECK_INTERVAL=300
RSS_MAX_AGE=3600
RSS_TIMEOUT=15
RSS_PARALLEL_FETCHES=5

# Content Processing
MIN_SCORE_THRESHOLD=8
EXTRACT_FULL_CONTENT=true
CONTENT_EXTRACTION_TIMEOUT=10
MAX_IMAGES_PER_POST=5
MAX_HASHTAGS_PER_POST=10

# Publication Queue
PUBLISH_DELAY=600
PUBLISH_DELAY_JITTER=0.2
QUEUE_MAX_SIZE=1000
QUEUE_RETRY_MAX_ATTEMPTS=3
QUEUE_RETRY_BACKOFF_BASE=2.0
DEAD_LETTER_QUEUE_ENABLED=true

# Deduplication
DEDUP_HASH_ALGORITHM=md5
DEDUP_CONTENT_PREFIX_LEN=500
DEDUP_AUTO_CLEANUP_DAYS=7

# External Integration
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60
REQUEST_TIMEOUT=30
REQUEST_MAX_RETRIES=3

# Prometheus Metrics
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_NAMESPACE=ultrabot

# Web API
API_ENABLED=true
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=2

# Security
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ENABLED=false
CORS_ORIGINS=

# Logging
LOG_TO_STDOUT=true
LOG_TO_FILE=false
LOG_FILE_PATH=logs/ultrabot.log
LOG_FILE_MAX_BYTES=10485760
LOG_FILE_BACKUP_COUNT=5

# Graceful Shutdown
SHUTDOWN_TIMEOUT=30
